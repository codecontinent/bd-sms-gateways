{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["es2018", "dom", "esnext"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist", "lib/**/*.spec.ts"]
}